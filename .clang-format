BasedOnStyle: Microsoft
IndentWidth: 4
ColumnLimit: 120

# 使用 4 个空格缩进
UseTab: Never

# 设置命名空间内的内容缩进
NamespaceIndentation: All

# Braces on new lines except for control statements
BraceWrapping:
  AfterFunction: true
  AfterControlStatement: false
  AfterStruct: true
  AfterClass: true
  AfterEnum: true
  BeforeElse: false

# Empty function body braces on the same line
AllowShortFunctionsOnASingleLine: All

# Other common style options
AlignConsecutiveMacros: true
AlignAfterOpenBracket: Align
